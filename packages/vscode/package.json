{
    "name": "nginx-config-formatter-vscode-extension",
    "displayName": "Nginx Config Formatter",
    "description": "A formatter with minimal configurations for nginx config files",
    "author": "Aaron Zhou",
    "publisher": "AaaaronZhou",
    "version": "1.4.1",
    "license": "MIT",
    "type": "module",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Formatters"
    ],
    "keywords": [
        "nginx",
        "conf",
        "configuration",
        "format",
        "formatter"
    ],
    "files": [
        "dist"
    ],
    "homepage": "https://github.com/Clarkkkk/nginx-config-formatter#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Clarkkkk/nginx-config-formatter"
    },
    "bugs": {
        "url": "https://github.com/Clarkkkk/nginx-config-formatter/issues"
    },
    "badges": [],
    "galleryBanner": {
        "theme": "light"
    },
    "icon": "assets/logo.png",
    "main": "./dist/extension.cjs",
    "browser": "./dist/extension.cjs",
    "contributes": {
        "languages": [
            {
                "id": "nginx",
                "aliases": [
                    "NGINX Conf",
                    "NGINX",
                    "nginx"
                ],
                "extensions": [
                    ".conf"
                ],
                "configuration": "./nginx.configuration.json"
            }
        ],
        "configuration": {
            "title": "Nginx Config Formatter",
            "properties": {
                "indentStyle": {
                    "description": "Set the indent style",
                    "type": "string",
                    "enum": [
                        "space",
                        "tab"
                    ],
                    "enumDescriptions": [
                        "Use 4 spaces for indentation",
                        "Use tab for indentation"
                    ],
                    "default": "space"
                },
                "align": {
                    "description": "Align the values of all directives in the same block",
                    "type": "boolean",
                    "default": false
                },
                "trailingBlankLines": {
                    "description": "Append a trailing blank line at the end of the file",
                    "type": "boolean",
                    "default": true
                }
            }
        }
    },
    "activationEvents": [
        "onLanguage:nginx"
    ],
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "typecheck": "tsc --noEmit --watch --preserveWatchOutput",
        "compile": "vite build",
        "watch": "vite build",
        "package": "vite build",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "lint": "eslint --cache --fix src/**/*.{js,ts}",
        "lint-staged": "lint-staged",
        "test": "vitest",
        "test:update": "vitest --update",
        "test:run": "vitest --run --changed",
        "release": "commit-and-tag-version"
    },
    "dependencies": {
        "nginx-config-formatter": "workspace:*"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/node": "20.2.5",
        "@types/vscode": "^1.60.0",
        "@vscode/test-electron": "^2.3.2",
        "glob": "^8.1.0",
        "rollup-plugin-node-externals": "^6.1.1",
        "vite": "^4.3.1",
        "vite-plugin-dts": "^3.6.0"
    }
}
